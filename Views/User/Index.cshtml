@model skeleton.Models.LoginViewModel


<h3>Login:</h3>
 
<form asp-controller="User" asp-action="Login" method="post">
    <p>
        <label for="login_email">Email</label>
        <input type="text" name ="login_email">
        <span class="text-danger" asp-validation-for="login_email"></span>
    </p>

    <p>
        <label for="login_password">Password</label>
        <input type="password" name ="login_password">
        <span class="text-danger" asp-validation-for="login_password"></span>
    </p>
    <p>
        <button class="btn btn-sm btn-primary">Login</button>
    </p>
</form>
        <p> New User? Why don't you go ahead and <a  href="user/create"><button class="btn btn-info">Register</button></a></p>

@if (ViewBag.errorMsg != null)
{
    <p class="text-danger">@ViewBag.errorMsg</p>
}
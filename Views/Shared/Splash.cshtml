<h1>WELCOME!</h1>

<p>You got here via @TempData["String"]</p>
<p>
<a asp-action="AddActivity" asp-controller="Activity"><button style="display: inline-block" class="btn btn-success">Add Game Session</button></a>
</p>


<table class="table">
  <thead>
    <tr class="table-success">
      <td>Activity</td>
      <td>Date and Time</td>
      <td>Duration</td>
      <td>Event Coordinator</td>
      <td>Number of Attendees</td>
      <td>Actions</td>
  </thead>
  <tbody>
    @foreach (var activity in @ViewBag.activities)
    {
      <tr class="table-info">
        <td><a asp-action="Display" asp-controller="Activity" asp-route-ActivityID="@activity["activityID"]">@activity["title"]</a></td>
        <td>@activity["sessionDateTime"].ToString("MMM d yyyy")</td>
        <td>@activity["duration"] @activity["dA"]</td>
        <td>@activity["owner"]</td>
        <td>@activity["attendees"]</td>
        @if (activity["owned"])
        {
          <td><a asp-action="Delete" asp-controller="Activity" asp-route-ActivityID="@activity["activityID"]">Delete</a></td>
        }
        else if (activity["RSVPed"])
        {
          <td><a asp-action="UnRSVP" asp-controller="Activity" asp-route-ActivityID="@activity["activityID"]">Un-RSVP</a></td>
        }
        else
        {
          <td><a asp-action="Respond" asp-controller="Activity" asp-route-ActivityID="@activity["activityID"]">RSVP</a></td>
        }
      </tr>
    }
  </tbody>
</table>

